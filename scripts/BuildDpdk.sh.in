#!/bin/bash

# Variables
BUILD_PATH=@_DPDK_BUILD_DIR@
INST_PATH=@CMAKE_INSTALL_PREFIX@

# Run
BUILD_RESULT=$(cd $BUILD_PATH && ninja | grep error)

# Prints:
# File descriptor 1 is the standard output (stdout).
# File descriptor 2 is the standard error (stderr).
if [[ ${BUILD_RESULT+x} ]]; then
	printf '%s' "$BUILD_RESULT">&1	
fi
